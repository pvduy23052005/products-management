extends ../../layouts/default.pug

block main 
   h1( class = "") Chi tiet san Pham 

   if( product.TenSanPham )
      h2( class = "mb-4") #{product.TenSanPham}
   
   if(product.SoLuong)
      div() So luong : #{product.SoLuong}
   
   if(product.hinhAnh)
      img(src=product.hinhAnh, 
         alt=""
         width = "100px"
         height = "100px"
      )

   if(product.gia) 
      div() Gia ban : #{product.gia}
   
   if( product.giam)
      div() Giam : #{product.giam} %
      
   if( product.position)
      div() Vi tri : #{product.position}
   
   if( product.status)
      if(product.status == 'active')
         div() Trang thai: Hoat dong 
      else 
         div() Trang thai: Dung hoat dong 
      
   a(
      href = `/admin/products/edit/${product._id}`
      ) Chinh sua