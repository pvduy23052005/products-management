extend ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
   h1( class = "mb-4") Chỉnh sửa sản phẩm  

   +alert-success(5000)
   +alert-error(5000)

   form(
      action=`/admin/roles/edit/${data.id}?_method=PATCH`
      id = "form-create-products"
      method = "POST"
      )
         div(class = "form-group")
            label(for="title") Tiêu đề
            input(
               type="text"
               class ="form-control"
               id = "title"
               name = "title"
               value = data.title
               required
            )
      
         div(class = "form-group")
            label(for="description") Mô tả
            input(
               type="text"
               class ="form-control"
               id = "description"
               name = "description"
               rows = "5"
               value = data.description 
            )

         div(class ="form-group")
            button(
               type = "submit"
               class = "btn btn-primary"
            ) CAP NHAT
   script(src="/admin/js/product.js") 