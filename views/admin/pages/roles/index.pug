extends ../../layouts/default.pug

block main 
   h1( class = "mb-4") Nhóm quyền 

   .card.mb-3 
      .card-header Danh sách
      .card-body 
         .row 
            .col-8  
            .col-4.text-right 
               a(
                  href="/admin/roles/create"
                  class ="btn btn-outline-success"
               ) + Thêm mới

      table(
      class ="table table-hover table-sm"
         )  
            thead 
               tr 
                  th STT 
                  th Nhóm quyền  
                  th Mô tả ngắn 
                  th Hành động
            tbody  
               if(records.length > 0)
                  each item , index in records
                     tr
                        td #{index + 1}
                        td #{item.title}
                        td #{item.description}
                        td 
                           a(href=`/admin/roles/edit/${item.id}`
                              class = "btn btn-warning btn-sm"
                           ) Sửa
                           a(
                              href=`/admin/roles/detail/${item.id}`
                              class = "btn btn-secondary"
                              class = ""
                              ) Chi tiết 
                           a(
                              href=`/admin/roles/delete/${item.id}`
                              class = "btn btn-danger"
                           ) Xóa  
               else 
                  tr 
                     td Chưa có nhóm quyền
